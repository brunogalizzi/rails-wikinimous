<%= form_for(@article) do |f| %>
  <div class="form-group"><%= f.label :title, class: "control-label required"%>
  <%= f.text_field :title, class: "form-control"%></div>
  <div class="form-group"><%= f.label :content, class: "control-label required"%>
  <%= f.text_field :content, class: "form-control"%></div>
  <%= f.submit class: "btn btn-default"%>
<% end %>
